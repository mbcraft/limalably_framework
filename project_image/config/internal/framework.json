{
    "defaults": {
        "execution_mode": {
            "maintenance": {
                "logging": {
                    "type": "together-file",
                    "min_level": "debug",
                    "log_mode": "normal"
                },
                "urlmap": {
                    "private_routes_visible": false
                },
                "template": {
                    "auto_reload": true
                },
                "request" : {
                    "route_handler_class" : "LMaintenanceRouteExecutor"
                }
            },
            "framework_development": {
                "logging": {
                    "type": "output",
                    "min_level": "debug"
                },
                "urlmap": {
                    "private_routes_visible": true
                },
                "template": {
                    "auto_reload": true
                }
            },
            "development": {
                "logging": {
                    "type": "distinct-file",
                    "min_level": "debug"
                },
                "urlmap": {
                    "private_routes_visible": true
                },
                "template": {
                    "auto_reload": true
                }
            },
            "testing": {
                "logging": {
                    "type": "distinct-file",
                    "min_level": "error"
                },
                "urlmap": {
                    "private_routes_visible": false
                },
                "template": {
                    "auto_reload": false
                }
            },
            "production": {
                "logging": {
                    "type": "db",
                    "min_level": "error"
                },
                "urlmap": {
                    "private_routes_visible": false
                },
                "template": {
                    "auto_reload": false
                }
            }
        },
        "urlmap": {
            "static_routes_folder" : "urlmap/public/static/",
            "hash_db_routes_folder" : "urlmap/public/hash_db/",
            "private_routes_folder" : "urlmap/private/",
            "search_order": "hash_db,static",
            "special_folder_route": "_folder",
            "special_inherited_route": "_default",
            "special_truncate_route": "_stop",
            "ignore_missing_extends": false,
            "ignore_missing_imports": false,
            "validation_driver_class": "LRespectValidationDriver"
        },
        "template": {
            "source_factory_class": "LTwigTemplateSourceFactory",
            "root_folder": "template/",
            "cache_folder": "temp/cache/template/",
            "strict_variables": false,
            "autoescape" : "name",
            "import_into_variables": ["env", "env_string" , "output_string" ,"input", "input_string","session", "session_string","capture", "capture_string","parameters", "parameters_string" ,"urlmap", "urlmap_string"],
            "extension_search_list" : [".html",".xhtml",".json",".twig"]
        },
        "logging": {
            "distinct-file": {
                "date_format": "d/m/Y H:i:s",
                "log_format": "[ {date} - {level_string} - {code} ] : {message}\n",
                "log_mode": "normal",
                "max_mb": 10,
                "log_folder": "logs/",
                "min_level": "debug"
            },
            "together-file": {
                "date_format": "d/m/Y H:i:s",
                "log_format": "[ {date} - {level_string} - {code} ] : {message}\n",
                "log_mode": "rolling",
                "max_mb": 10,
                "log_folder": "logs/",
                "min_level": "debug"
            },
            "db": {
                "log_mode": "normal",
                "connection_name": "default",
                "max_records": 1000000,
                "table_name": "logs",
                "min_level": "debug"
            },
            "output": {
                "min_level": "debug",
                "log_folder" : "logs/"
            }
        },
        "treemap": {
            "false_values": ["false", "null", "0", "no", 0, false, null]
        },
        "classloader": {
            "code_file_ends_with": [".class.php", ".interface.php", ".trait.php"],
            "framework_folder_list": ["lib/"],
            "project_folder_list": ["lib/", "urlmap/handlers/"],
            "map_cache_file_path": "temp/classloader/map/classloader_map_cache.php",
            "class_cache_folder": "temp/classloader/classes/",
            "cache_commented_call_list": ["LResult::framework_debug", "LResult::debug", "LLog::debug", "LLog::info"],
            "skip_cache_route_list": [],
            "skip_cache_query_parameter": null,
            "proc_folder": "proc/",
            "proc_extension": ".proc.php",
            "data_folder": "data/"
        },
        "request": {
            "input_source_list": ["files", "post", "get"],
            "route_handler_class" : "LDefaultRouteExecutor"
        },
        "exec": {
            "method_parameter_search_list": ["meta", "capture", "rel_input", "input", "rel_session", "session", "rel_output", "output", "default_value"]
        },
        "format": {
            "html": {
                "error_templates_folder": "template/errors/html/"
            },
            "json": {
                "encode_options": ["THROW_ON_ERROR"],
                "error_templates_folder": "template/errors/json/"
            },
            "default_error_format" : "html"
        },
        "session" : {
            "use_strict_mode" : true
        },
        "error" : {
            "log" : true,
            "continue_on_errors" : false
        }
    }
}